{
  "name": "takadao.takaturn.comtracts",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=17",
    "npm": "please-use-yarn",
    "yarn": ">= 1.22"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "^4.9.2",
    "@openzeppelin/contracts-upgradeable": "^4.9.2",
    "@openzeppelin/test-helpers": "0.5.16",
    "@solidstate/contracts": "^0.0.57",
    "@solidstate/spec": "^0.0.57",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "ethereum-waffle": "^4.0.10",
    "ethers": "5.7.2",
    "hardhat": "^2.16.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.31",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.3"
  },
  "scripts": {
    "compile": "yarn hardhat compile",
    "test": "yarn hardhat test",
    "test:staging": "yarn hardhat test --network testnet_arbitrum",
    "contractsInfo": "yarn hardhat run scripts/contractsInfo.js --network testnet_arbitrum",
    "eventSignatures": "yarn hardhat run scripts/eventSignatures.js",
    "eventUrls": "yarn hardhat run scripts/tx-urls.js",
    "slither": "slither . --solc-remaps '@openzeppelin=node_modules/@openzeppelin' --exclude naming-convention,low-level-calls --buidler-ignore-compile",
    "coverage": "yarn hardhat coverage",
    "n": "yarn hardhat node",
    "deploy": "yarn hardhat deploy",
    "deploy:local": "yarn hardhat deploy --tags takaturn_deploy",
    "deploy:mainnet": "yarn hardhat deploy --network mainnet_arbitrum --tags takaturn_deploy",
    "deploy:goerli": "yarn hardhat deploy --network testnet_arbitrum --tags takaturn_deploy",
    "upgrade:local": "yarn hardhat deploy --tags takaturn_upgrade",
    "upgrade:mainnet": "yarn hardhat deploy --network mainnet_arbitrum --tags takaturn_upgrade",
    "upgrade:goerli": "yarn hardhat deploy --network testnet_arbitrum --tags takaturn_upgrade",
    "format": "yarn prettier --write .",
    "create:term": "yarn hardhat run scripts/contractInteractions/createTerm.js --network testnet_arbitrum",
    "join:term": "yarn hardhat joinTerm --network testnet_arbitrum --term-id",
    "pay:term": "yarn hardhat payContribution --network testnet_arbitrum --term-id",
    "autoPay:term": "yarn hardhat toggleAutoPay --network testnet_arbitrum --term-id",
    "withdraw:fund:term": "yarn hardhat withdrawFund --network testnet_arbitrum --term-id",
    "withdraw:collateral:term": "yarn hardhat withdrawCollateral --network testnet_arbitrum --term-id",
    "start:term": "yarn hardhat startTerm --network testnet_arbitrum --term-id",
    "close:cycle": "yarn hardhat closeFundingPeriod --network testnet_arbitrum --term-id",
    "start:cycle": "yarn hardhat startNewCycle --network testnet_arbitrum --term-id",
    "summary:term": "yarn hardhat termSummary --network testnet_arbitrum --term-id",
    "summary:user": "yarn hardhat userSummary --network testnet_arbitrum --user-address",
    "summary:user:id": "yarn hardhat userSummaryByTermId --network testnet_arbitrum --user-address"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "crypto": "^1.0.1",
    "erc-20-abi": "^1.0.0",
    "exceljs": "^4.3.0",
    "hardhat-helpers": "^0.1.51",
    "hardhat-tracer": "^2.5.0",
    "xlsx": "^0.18.5"
  }
}
